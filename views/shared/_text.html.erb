<section>
  <p>
    <mark data-rating="<%= rating_group(entry['rating']) %>"><%= entry["rating"] || "n/a" %></mark>
    <span>&nbsp;<strong><%= entry["title"] %></strong> by <%= entry["author"] %></span>
  </p>
  <br />
  <table>
    <% if entry["collection"] %>
      <tr>
        <td>from: </td>
        <td><%= entry["collection"] %></td>
      </tr>
    <% end %>
    <tr>
      <td>read: </td>
      <td><%= entry["read"] %></td>
    </tr>
    <tr>
      <td>pub: </td>
      <td><%= entry["published"] || "-" %></td>
    </tr>
    <tr>
      <td>type: </td>
      <td><%= entry["type"].gsub("_", " ") %></td>
    </tr>
    <tr>
      <td>tags: </td>
      <td><%= entry["tags"]&.length&.positive? ? entry["tags"].join(", ") : "-" %></td>
    </tr>
  </table>
</section>
